<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/visual"
    android:layout_margin="@dimen/activity_vertical_margin">

    <TableRow>

        <TextView
            android:id="@+id/tempo_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Tempo slider" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/tempo_slider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:dsb_max="300"
            app:dsb_min="30"
            app:dsb_value="100" />
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">

        <!--<TextView-->
        <!--android:id="@+id/quick_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center_vertical"-->
        <!--android:text="Quick tempo" />-->

        <GridView
            android:theme="@style/MyButton"
            android:id="@+id/gridview"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_span="2"
            android:horizontalSpacing="1dp"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp">

        </GridView>
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tap_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Tap tempo" />

        <TextView
            android:id="@+id/tap_tempo_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Tap to set tempo here" />

    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/volumn_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Volumn" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/volumn_slider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:dsb_indicatorColor="@color/colorAccent"
            app:dsb_max="100"
            app:dsb_min="1"
            app:dsb_value="50" />
    </TableRow>
</TableLayout>