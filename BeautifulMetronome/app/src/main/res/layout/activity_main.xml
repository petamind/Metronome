<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tungnd.android.beautifulmetronome.MainActivity">

    <com.tungnd.android.beautifulmetronome.BeatView
        android:id="@+id/visual"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/visual_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/visual"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Tempo: 100"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/visual_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/visual"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="4/4"
        android:textColor="#fff"
        android:textSize="30sp" />

    <include layout="@layout/settings_layout" />

</RelativeLayout>
